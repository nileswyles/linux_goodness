#!/bin/perl
use strict;
use warnings;

# TOOD: INTEGRATE ARGPARSE and add commit/dry_run option?

my $URL = "https://nileswyles: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\@github.com/nileswyles/linux_goodness.git"

my ($GIT_FILES_MANIFEST_FILE, $COMMIT) = @ARGV;

# Individually take care of .git and .git_modules (add any other metadata files as needed.)
my $CMD = "sudo mkdir .git; \\\n".
"sudo chgrp -R git .git; \\\n".
"sudo chmod -R g+w .git; \\\n".
"sudo chmod -R g+r .git; \\\n".
"sudo echo \"\" > .git_modules; \\\n".
"sudo chgrp -R git .git_modules; \\\n".
"sudo chmod -R g+w .git_modules; \\\n".
"sudo chmod -R g+r .git_modules; \\\n".
"sudo ./scripts/git_misc/git_group_add $GIT_FILES_MANIFEST_FILE";

print("***As elevated user***: \n$CMD\n");
if ($COMMIT eq "--commit") {
	system("su root -c \"$CMD\"");
}

$CMD = "git config --global --add safe.directory $DIRECTORY; \\\n".
"git config --global --add init.defaultBranch main; \\\n".
"git init; \\\n".
"git remote add origin $URL; \\\n".
"git pull origin main;".

print("$CMD\n");
if ($COMMIT eq "--commit") {
	exit system($CMD);
}
